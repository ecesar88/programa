model Contact {
  id            String        @id @default(uuid())
  email         Email[]
  phone         Phone[]
  address       Address[]
  Customer      Customer[]
  Supplier      Supplier?
  storeBranches StoreBranch[]
  employees     Employee[]
}

model Phone {
  id        String   @id @default(uuid())
  name      String
  value     String
  Contact   Contact? @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId String?
}

model Email {
  id        String   @id @default(uuid())
  name      String
  value     String
  Contact   Contact? @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId String?
}

model Supplier {
  id        String   @id @default(uuid())
  cnpj      String   @unique
  name      String
  contact   Contact  @relation(fields: [contactId], references: [id])
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?
  addressId String
  Address   Address  @relation(fields: [addressId], references: [id])
  contactId String   @unique
}

model Customer {
  id                 String    @id @default(uuid())
  customerType       Document  @default(CPF)
  document           String?
  contact            Contact   @relation(fields: [contactId], references: [id])
  inscricaoEstadual  String?
  inscricaoMunicipal String?
  name               String
  address            Address[]
  contactId          String
}

model Car {
  id           String @id @default(uuid())
  make         String @unique
  model        String @unique
  year         Int
  licensePlate String
  color        String
}

model Employee {
  id           String      @id @default(uuid())
  name         String
  surname      String
  cpf          String
  systemUser   User?       @relation(fields: [userId], references: [id])
  contact      Contact     @relation(fields: [contactId], references: [id])
  workLocation StoreBranch @relation(fields: [storeBranchId], references: [id])
  entryDate    DateTime
  position     String

  userId        String?
  contactId     String
  storeBranchId String
}

model Store {
  id       String        @id @default(uuid())
  name     String
  branches StoreBranch[]
}

model StoreBranch {
  id        String     @id @default(uuid())
  name      String
  cpnj      String     @unique
  isMatrix  Boolean    @default(false)
  employees Employee[]
  stock     Stock?
  contact   Contact    @relation(fields: [contactId], references: [id])
  store     Store?     @relation(fields: [storeId], references: [id])

  contactId String
  storeId   String?
}

model Stock {
  id          String      @id @default(uuid())
  storeBranch StoreBranch @relation(fields: [storeBranchId], references: [id])
  products    Product[]

  storeBranchId String @unique
}
